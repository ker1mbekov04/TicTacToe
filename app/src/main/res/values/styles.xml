<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Базовая тема приложения с светлым фоном -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Добавление светлого фона для всего приложения -->
        <item name="android:windowBackground">@color/light_background</item>
    </style>

    <!-- Стиль для кнопок на поле крестики-нолики с границами -->
    <style name="TicTacToeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>

        <!-- Добавление светлой границы вокруг кнопок -->
        <item name="android:background">@drawable/button_border</item>
    </style>

    <!-- Стиль для текстового статуса -->
    <style name="StatusTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для кнопок управления игрой с границами -->
    <style name="ControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">8dp</item>
        <!-- Граница для кнопок управления -->
        <item name="android:background">@drawable/button_border</item>
    </style>

</resources>

